            <div class="col-md-12 col-sm-12 col-xs-12 pr-section sole-24-ore">
                <div class="pr-content">
                    <h3>Anagrafica</h3>
                    <%= @sole24OreElem1.to_s.html_safe %>
                </div>
                <div class="pr-content">
                    <h3>Indici borsistici e redditivit&agrave;</h3>
                    <%= @sole24OreElem2.to_s.html_safe %>
                </div>
                <div class="pr-content">
                    <h3>Sintesi bilancio</h3>
                    <%= @sole24OreElem3.to_s.html_safe %>
                </div>
                <div class="pr-content">
                    <h3>Sintesi analisi tecnica</h3>
                    <%= @sole24OreElem4.to_s.html_safe %>
                </div>
            </div>
            <a href="#main-wrapper" data-turbolinks="false" class="back-on-top" title="Back on top"><i class="fa fa-chevron-up"></i>Back on top</a>
        </div>
    </div>
</div>
