		<div class="row section">
		<div class="custom-title">
			<h1><%= @stock.name %></h1>
			<span><%= @stock.last_price %></span>&nbsp;/&nbsp;<span class="<%= colorClass(@stock.variation)%>"><%=@stock.variation%></span>
		</div>
		
            
        </div>
		
		<div class="row section">
			<div class="return"><i class="fa fa-angle-left"></i>&nbsp;<%= link_to "Return home", root_path %> </div>
		</div>
            
