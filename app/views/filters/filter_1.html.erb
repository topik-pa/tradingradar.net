<h2>Channels break out</h2>
<%if !@overResistanceStocks.nil? %>	
	<table class="tablesorter">
		<caption>Resistance</caption>
	    <thead>
	        <tr>
	            <th>
	                Name
	            </th>
	            <th>
	                Last price
	            </th>
				<th>
	                Borsa Italiana
	            </th>
				<th>
	                Il Sole 24 Ore
	            </th>
				<th>
	                Repubblica
	            </th>			
	        </tr>
	    </thead>
	    <tbody>
	        <% @overResistanceStocks.each do |stock| %>
	        <tr class="<%= cycle('even', 'odd') -%>">
	            <td>
	                
					<%= link_to "#{stock['name']}", stock_page_index_path(isin: "#{stock['isin']}") %>
	            </td>
	            <td>
	                <%= "#{stock['last_price']}" %>
	            </td>
				<td>
	                <%= "#{stock['borsa_italiana_resistance']}" %>
	            </td>
				<td>
	                <%= "#{stock['xxivore_resistance']}" %>
	            </td>
				<td>
	                <%= "#{stock['repubblica_resistance']}" %>
	            </td>
	        </tr>
	        <% end %>
	    </tbody>
	</table>
<% else %>
	<table class="tablesorter">
		<tbody>
			<tr>
				<td span="5">
					No data
				</td>
			</tr>
		</tbody>
	</table>
<% end %>	
	
	
