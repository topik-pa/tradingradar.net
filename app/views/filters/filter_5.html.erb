<h2>Rising crossing stocks</h2>

<%if !@risingCrossingStocksOnStudy.nil? %>
	<table class="tablesorter">
	    <thead>
	        <tr>
	            <th>
	                Name
	            </th>
	            <th>
	                Last price
	            </th>		
	        </tr>
	    </thead>
	    <tbody>
	        <% @risingCrossingStocksOnStudy.each do |stock| %>
	        <tr class="<%= cycle('even', 'odd') -%>">
	            <td>
	                
					<%= link_to "#{stock['name']}", stock_page_index_path(isin: "#{stock['isin']}") %>
	            </td>
	            <td>
	                <%= "#{stock['last_price']}" %>
	            </td>
	        </tr>
	        <% end %>
	    </tbody>
	</table>
<% else %>
	<table class="tablesorter">
		<tbody>
			<tr>
				<td span="5">
					No data
				</td>
			</tr>
		</tbody>
	</table>
<% end %>