<div class="markets">
    <div class="row  tile_count">
        <% @firstRowMarkets.each do |market| %>
        <div class="col-md-2 col-sm-3 col-xs-4 tile_stats_count markets_baskets">
            <span class="count_top"><i class="fa fa-area-chart"></i><%= market.name %></span>
            <div class="count">
                <%= market.value %>&nbsp;/&nbsp;<i class="variation <%= colorClass(market.variation) %>"><%= market.variation %>% </i>
            </div>
            <span class="count_bottom"><%= market.updated_at %></span>
        </div>
        <% end %>
    </div>
    <div class="row  tile_count">
        <% @secondRowMarkets.each do |market| %>
        <div class="col-md-2 col-sm-3 col-xs-4 tile_stats_count markets_baskets">
            <span class="count_top"><i class="fa fa-tint"></i><%= market.name %></span>
            <div class="count">
                <%= market.value %>&nbsp;/&nbsp;<i class="<%= colorClass(market.variation) %>"><%= market.variation %>% </i>
            </div>
            <span class="count_bottom"><%= market.updated_at %></span>
        </div>
        <% end %>
    </div>
    <div class="row  tile_count">
        <% @thirdRowMarkets.each do |market| %>
        <div class="col-md-2 col-sm-3 col-xs-4 tile_stats_count markets_baskets">
            <span class="count_top"><i class="fa fa-money"></i><%= market.name %></span>
            <div class="count">
                <%= market.value %>&nbsp;/&nbsp;<i class="<%= colorClass(market.variation) %>"><%= market.variation %>% </i>
            </div>
            <span class="count_bottom"><%= market.updated_at %></span>
        </div>
        <% end %>
    </div>
</div>
