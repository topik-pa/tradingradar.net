<div class="row  tile_count">
    <% markets.each do |market| %>
    <div class="col-md-2 col-sm-3 col-xs-4 tile_stats_count markets_baskets">
        <span class="count_top"><i class="fa fa-line-chart"></i><a title="<%= market.name + ' - Analisi sul sito Il Sole 24 Ore' %>" href="<%= @marketsUrlMap[market.name] %>"><%= market.name %></a></span>
        <div class="count">
            <%= market.value %>&nbsp;/&nbsp;<i class="variation <%= colorClass(market.variation) %>"><%= market.variation %>% </i>
        </div>
    </div>
    <% end %>
</div>

