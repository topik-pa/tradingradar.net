<% meta_tag :robots, 'index, follow' %>
<% meta_tag :author, $author + ' - ' + $authorMail %>
<% meta_tag :canonical, 'http://www.tradingradar.net' %>


<div class="top-section">  
	<div>
	    <ul>
	        <li>
				<%= image_tag("front-image.jpg", size: "1920x430", alt: "Borsa italiana a Milano - Entrata principale") %>
	            <div class="flex-caption container">
	                <h2 class="entry-title"><%= $mission %></h2>
	                <div class="excerpt">        	
