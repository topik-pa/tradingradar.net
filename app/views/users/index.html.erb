<% meta_tag :robots, 'noindex, nofollow' %>

<main id="main">
    <div id="content" class="container">
        <div class="row">
            <div id="primary" class="col-sm-12">
                <p id="notice">
                    <%= notice %>
                </p>
                <h1>Users</h1>
                <table class="tablesorter">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Surname
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Password
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                        <tr class="<%= cycle('even', 'odd') -%>">
                            <td>
                                <%= user.first_name %>
                            </td>
                            <td>
                                <%= user.last_name %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.password_digest %>
                            </td>                             
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <br>
            </div>
        </div>
    </div>
</main>
