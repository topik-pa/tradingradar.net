<div class="container body">
    <div class="main_container">
        <%= render("shared/left_col") %>
        <%= render("shared/top_nav") %>
        <div class="right_col" role="main" style="min-height: 1657px;">
            <div class="row section">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="custom-title">
                        <h1><%= @stock.name %></h1>
                        <span><%= @stock.last_price %></span>&nbsp;/&nbsp;<span class="<%= colorClass(@stock.variation)%>"><%=@stock.variation %></span>
                    </div>
                </div>
            </div>
            <div class="row section">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="return">
                        <i class="fa fa-angle-left"></i>&nbsp;<%= link_to "Return to title analisys", stock_page_index_path(isin: @stock.isin) %>
                    </div>
                </div>
            </div>
            <%= render("last_study") %>
            <%= render("add_study") %>
        </div>
        <%= render("shared/footer") %>
    </div>
</div>
