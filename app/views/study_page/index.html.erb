            <div class="row section new-study-form">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Add study</h2>
                            <div class="clearfix"/>
                        </div>
                        <div class="x_content">
                            <%=	form_tag({controller: "study_page"}, action: "create", :class => 'form-horizontal form-label-left') %>
                            <div class="form-group">
                                <%= label_tag(:study_resistance,  "Resistance:", :class => 'control-label col-md-3 col-sm-3 col-xs-12') %>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <%= text_field(:study, :resistance, :class => 'form-control col-md-7 col-xs-12') %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag(:study_support,  "Support:", :class => 'control-label col-md-3 col-sm-3 col-xs-12') %>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <%= text_field(:study, :support, :class => 'form-control col-md-7 col-xs-12') %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag(:study_direction,  "Direction:", :class => 'control-label col-md-3 col-sm-3 col-xs-12') %>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <%= text_field(:study, :direction, :class => 'form-control col-md-7 col-xs-12') %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag(:study_mmp1,  "Moving Average Weighted 1:", :class => 'control-label col-md-3 col-sm-3 col-xs-12') %>
