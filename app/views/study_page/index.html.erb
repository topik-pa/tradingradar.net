                                    <%= text_field(:study, :mmp1, :class => 'form-control col-md-7 col-xs-12') %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag(:study_mmp2,  "Moving Average Weighted 2:", :class => 'control-label col-md-3 col-sm-3 col-xs-12') %>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <%= text_field(:study, :mmp2, :class => 'form-control col-md-7 col-xs-12') %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag(:study_gap,  "Gap:", :class => 'control-label col-md-3 col-sm-3 col-xs-12') %>
