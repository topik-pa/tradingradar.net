                                <%= label_tag(:study_sell,  "Sell:", :class => 'control-label col-md-3 col-sm-3 col-xs-12') %>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <%= text_field(:study, :sell, :class => 'form-control col-md-7 col-xs-12') %>
                                </div>
                            </div>
                            <div class="form-group">
