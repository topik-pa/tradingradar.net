<!DOCTYPE html>
<html>
    <head>
		<title>
		  <%= if content_for?(:title) then yield(:title) + ' | ' end %><%=$appName + ' ' + $appVersion%>
		</title>
        <%= csrf_meta_tags %>
		
		<meta name='description' content='<%= yield_meta_tag(:description, 'A description of this project') %>' />
		<meta name='keywords' content='<%= yield_meta_tag(:keywords, 'comma, separated, keywords') %>' />
		<meta name='author' content='<%= yield_meta_tag(:author, 'Name Surname') %>' />

		<%= favicon_link_tag 'favicon.ico' %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    </head>
    <body class="nav-md">
        <div id="main-wrapper" class="<%= controller.controller_name %>">
            <%= yield %>
        </div>     
		
		<!-- Start of StatCounter Code for old browsers -->
		<noscript><div class="statcounter"><a title="free web stats"
		href="http://statcounter.com/" target="_blank"><img
		class="statcounter"
		src="//c.statcounter.com/11043457/0/9f87886c/0/" alt="free
		web stats"></a></div></noscript>
		<!-- End of StatCounter Code for old browsers -->
		   
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    </body>
</html>
