<% title $appDescription + ' | Login ' %>
<% meta_tag :description, 'Trading Radar - Login page' %>
<% meta_tag :keywords, 'trading, radar, login' %>
<% meta_tag :robots, 'index, follow' %>
<% meta_tag :author, $author + ' - ' + $authorMail %>


<main id="main" class="site-main" role="main">
	<div id="content" class="site-content container">
	    <div class="container main-content-area">
	        <div class="row pull-left">
	            <section id="primary" class="widget-area col-sm-12 col-md-12" role="complementary">
	                <div class="form form-style-8">
	                    <h1>Log in</h1>
	                    <% if  params[:error] %>
	                    <div class="error">
	                        Email o password sbagliati. Riprova per favore.
	                    </div>
	                    <% end %>
	                    <%= form_for(:session, url: login_path) do |f| %>
	                    <%= f.email_field :email, :placeholder => "Email", :required => "true" %>
	                    <%= f.password_field :password, :placeholder => "Password", :required => "true" %>
	                    <%= f.submit "Log in", class: "btn primary" %>
	                    <% end %>
	                    <div>
	                        Non sei registrato? <%= link_to "Sign up", signup_path %>.
	                    </div>
	                </div>
	            </section>
	        </div>
	    </div>
	</div>
</main>